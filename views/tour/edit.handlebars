<!-- DETAIL WRAPPER -->
<div class="detail-wrapper" style="margin: 100px;">
	<div class="container">
       	<div class="row padd-90">
       		<div class="col-xs-12 col-md-8">
				<form class="simple-from" action="/tours/{{tour.id}}?_method=PUT" method="post">
					<input type="hidden" name="_method" value="PUT">
					<div class="simple-group">
						<h3 class="small-title">Edit Tour</h3>
						<div class="row">
							<div class="col-xs-6 col-sm-6">
								<div class="form-block type-2 clearfix">
									<div class="form-label color-dark-2">Title</div>
									<div class="input-style-1 b-50 brd-0 type-2 color-3">
										<input name="title" type="text" value="{{tour.title}}">
									</div>
								</div>							
							</div>
										
							<div class="col-xs-6 col-sm-6">
								<div class="form-block type-2 clearfix">
									<div class="form-label color-dark-2">Description</div>
									<div class="input-style-1 b-50 brd-0 type-2 color-3">
										<input name="description" type="text" value="{{tour.description}}">
									</div>
								</div>							
							</div>
							<div class="col-xs-12 col-sm-6">
								<div class="form-block type-2 clearfix">
									<div class="form-label color-dark-2">Price </div>
									<div class="input-style-1 b-50 brd-0 type-2 color-3">
										<input name="price" type="text" value="{{tour.price}}">
									</div>
								</div>
							</div>
							<div class="col-xs-12 col-sm-6">
								<div class="form-block type-2 clearfix">
									<div class="form-label color-dark-2">Duration (Days)</div>
									<div class="input-style-1 b-50 brd-0 type-2 color-3">
										<input name="duration" type="text" value="{{tour.duration}}">
									</div>
								</div>
							</div>
							{{#each tour.days}}
							
								<div class="col-xs-12 col-sm-6">
									<div class="form-block type-2 clearfix">
										<div class="form-label color-dark-2">Day x</div>
										<div class="input-style-1 b-50 brd-0 type-2 color-3">
											<input name="duration" type="text" value="{{tour.days}}">
										</div>
									</div>
								</div>
							{{/each}}
							
							
							
